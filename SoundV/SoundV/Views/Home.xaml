<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoundV.Views.Home"
              Title="{Binding Title}"
             x:Name="Home">
    <StackLayout>
            <Button x:Name="GoToClockPageBtn" Clicked="Clock_Clicked" Text="GO TO CLOCK" FontSize="Large"/>
            <Button x:Name="GoToCallPageBtn" Clicked="Call_Clicked" Text="EMERGENCY CALL" FontSize="Large"/>
            <Button x:Name="GoToTaxiPageBtn" Clicked="Taxi_Clicked" Text="TAXI" FontSize="Large"/>
    </StackLayout>

  	<!--<ToolbarItem Text="Add Item" Clicked="Clock_Clicked" />-->
  
</ContentPage>